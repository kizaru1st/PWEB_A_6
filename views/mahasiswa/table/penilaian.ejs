<section id="basic-horizontal-layouts">
    <div class="row match-height">
        <div class="col-md-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title">Penilaian</h6>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="form-body">
                            <div class="row">
                                <!-- table hover -->
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Penilaian</th>
                                            <th>Bobot (%)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% penilaian.forEach(function(pnln, index) { %>
                                            <tr>
                                                <td class="text-bold-500">
                                                    <%= index+1 %>
                                                </td>
                                                <td>
                                                    <%= pnln.name %>
                                                </td>
                                                <td>
                                                    <%= pnln.percentage %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>